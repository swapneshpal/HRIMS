    @*JS Search facility in Dropdown*@

    <link href="~/assets/lib/chosen/chosen.css" rel="stylesheet" />
    <script src="~/assets/lib/chosen/chosen.jquery.js"></script>

  @*JS For News Section on DashBoard*@
<script src="~/Scripts/jquery.bootstrap.newsbox.js"></script>
<script src="~/Scripts/jquery.bootstrap.newsbox.min.js" type="text/javascript"></script>

    @*JS For Calendar on DashBoard*@
    <link href="~/assets/lib/fullcalendar-1.6.2/fullcalendar/fullcalendar.css" rel="stylesheet" />
    <script src="~/assets/lib/fullcalendar-1.6.2/fullcalendar/fullcalendar.min.js"></script>
    <script src="~/assets/lib/fullcalendar-1.6.2/fullcalendar/fullcalendar.js"></script>

    @*JS For DataTable*@
    <script src="https://cdn.datatables.net/1.10.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js"></script>
</head>
<body>

    <div class="container-fluid"><img src="~/Content/Images/logo.jpg" /></div>
    <div style="float:right;margin-top:-23px;margin-right:20px;">
        @if (HttpContext.Current.User.Identity.IsAuthenticated)
        {
      
          <span style="font-family:Calibri">Welcome:- @Session["LoginName"].ToString()</span>  
           
        }

    </div>
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {

        if (HRIMS.cRoleAccess.Get_ID(Convert.ToInt32(HRIMS.cEmpLogin.Get_ID(Convert.ToInt32(HttpContext.Current.User.Identity.Name)).objRoleAccess.iObjectID)).sName == "Admin" || HRIMS.cRoleAccess.Get_ID(Convert.ToInt32(HRIMS.cEmpLogin.Get_ID(Convert.ToInt32(HttpContext.Current.User.Identity.Name)).objRoleAccess.iObjectID)).sName == "HR")
        {
            @Html.Partial("_MenuAdmin")
        <br />
        }
        if (HRIMS.cRoleAccess.Get_ID(Convert.ToInt32(HRIMS.cEmpLogin.Get_ID(Convert.ToInt32(HttpContext.Current.User.Identity.Name)).objRoleAccess.iObjectID)).sName == "Employee") 
        {
            @Html.Partial("_MenuEmployee")
        }
        if (HRIMS.cRoleAccess.Get_ID(Convert.ToInt32(HRIMS.cEmpLogin.Get_ID(Convert.ToInt32(HttpContext.Current.User.Identity.Name)).objRoleAccess.iObjectID)).sName == "Supervisor")
        {
            @Html.Partial("_Supervisor")
        }
    }
   else {

        @Html.Action("Index","Login")
        }
    <div class="container-fluid">
        @RenderBody()
    </div>
    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="~/Scripts/navbar.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
   <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>
